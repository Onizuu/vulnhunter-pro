# Configuration VulnHunter Pro - MODE SANS IA
# Copiez ce fichier vers .env pour utiliser VulnHunter Pro sans cl√© API OpenAI
# cp config-sans-ia.env .env

# API Keys (Laissez vide pour mode sans IA)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Configuration de Scan
URL_CIBLE=http://testphp.vulnweb.com
INTENSITE_SCAN=normal
NOMBRE_THREADS=10
TIMEOUT_REQUETE=30

# API Flask
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=vulnhunter-secret-key-change-this

# Rapports
DOSSIER_RAPPORTS=./rapports/output
FORMAT_RAPPORT=html,json

# Logging
NIVEAU_LOG=INFO
LOG_FILE=./logs/vulnhunter.log

# Rate Limiting
REQUETES_PAR_SECONDE=10

# Limites
MAX_URLS_SCAN=100

# Validation
MIN_CONFIRMATIONS=3

